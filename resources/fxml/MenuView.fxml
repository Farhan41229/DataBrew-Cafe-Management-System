<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.databrew.cafe.controller.MenuController">
  <top>
    <HBox spacing="8" padding="10">
      <Button text="Add" onAction="#onAdd" styleClass="primary-btn" />
      <Button text="Edit" onAction="#onEdit" />
      <Button text="Delete" onAction="#onDelete" />
    </HBox>
  </top>
  <center>
    <TableView fx:id="menuTable">
      <columns>
        <TableColumn fx:id="nameCol" text="Name" prefWidth="160" />
        <TableColumn fx:id="priceCol" text="Price" prefWidth="80" />
        <TableColumn fx:id="categoryCol" text="Category" prefWidth="140" />
        <TableColumn fx:id="statusCol" text="Status" prefWidth="100" />
      </columns>
    </TableView>
  </center>
</BorderPane>
