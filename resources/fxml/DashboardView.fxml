<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainLayout" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.databrew.cafe.controller.DashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="14" styleClass="app-bar">
         <padding>
            <Insets top="12" right="16" bottom="12" left="16" />
         </padding>
                  <Label text="â˜•" styleClass="logo-icon" />
                  <Label text="DataBrew Cafe" styleClass="app-title" />
         <Pane HBox.hgrow="ALWAYS" />
         <Button text="Minimize" onAction="#handleMinimize" styleClass="window-btn" />
         <Button fx:id="fullscreenButton" text="Fullscreen" onAction="#handleFullscreen" styleClass="window-btn" />
      </HBox>
   </top>

   <left>
      <VBox spacing="15" styleClass="sidebar">
         <padding>
            <Insets top="20" right="16" bottom="20" left="16" />
         </padding>
         <Label text="DataBrew Cafe" styleClass="sidebar-title" />

         <Button text="Dashboard" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" />
         <Button text="POS / Orders" maxWidth="Infinity" onAction="#handleGoToPOS" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" />
         <Button text="Menu Management" maxWidth="Infinity" onAction="#handleGoToMenu" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" />
         <Button text="Employees" maxWidth="Infinity" onAction="#handleGoToEmployees" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" />
         <Button text="Inventory" maxWidth="Infinity" onAction="#handleGoToInventory" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" />

         <Label text="___________________" textFill="#5d6d7e" />
         <Button text="Logout" maxWidth="Infinity" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
      </VBox>
   </left>

   <center>
      <VBox alignment="CENTER" spacing="18">
         <Label text="Welcome to DataBrew System" styleClass="dashboard-welcome" />
         <Label text="Select an option from the sidebar to begin." styleClass="dashboard-subtext" />
      </VBox>
   </center>

</BorderPane>
