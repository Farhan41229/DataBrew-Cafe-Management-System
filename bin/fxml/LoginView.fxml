<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.databrew.cafe.controller.LoginController">
  <children>
    <VBox spacing="12" alignment="CENTER" prefWidth="320" prefHeight="380" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
      <Label text="DataBrew Cafe" styleClass="title" />
      <TextField fx:id="usernameField" promptText="Username" />
      <PasswordField fx:id="passwordField" promptText="Password" />
      <Button text="Login" onAction="#onLogin" styleClass="primary-btn" />
      <Label fx:id="errorLabel" styleClass="error-text" />
    </VBox>
  </children>
</AnchorPane>
